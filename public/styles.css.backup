/* empty component style */
* {
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

html {
    font-family: "Montserrat", sans-serif;
}
  
body {
    background: #eee;
    padding: 0 16px;
} 

h1 {
    font-size: 100px;
    color: black;
}

/* FONT AWESOME */
i {
    margin-right: 15px;
}

/* NAVBAR STARTS HERE */
.navbar {
    display: flex;
    justify-content: left;
    align-items: top;
    background-color: gray;
    margin: auto -16px;
    padding: 15px 30px;
    box-shadow: 0 0 10px 0 rgba(0, 0, 0, 0.3);
    width: 100vw;
    height: 25vh;
    flex-direction: column;
}

.inner-navbar {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 150px;
    height: 50px;
}

.bnm-logo {
    filter: invert(100%);
    width: 40px;
    height: 40px;
}

.bank-of {
    font-size: 2rem;
    color: white;
    font-weight: 600;
    padding-left: 5px;
}

.navmenu {
    /* background-color: green; */
    width: 100%;
    height: auto;
    display: flex;
    justify-content: center;
    align-items: center;
    padding-top: 10%;
}
  
ul a {
    display: flex;
    text-decoration: none;
    color: white;
    padding: 20px;
    font-size: 20px;
}

li {
    display: flex;
    text-decoration: none;
    color: white;
    padding: 20px;
    font-size: 20px;
}

a:hover {
    background-color: white;
    color: black;
}
/* NAVBAR ENDS HERE */